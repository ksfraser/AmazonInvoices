{
    "name": "amazon-invoices/frontaccounting-module",
    "description": "Amazon Invoice Management Module for FrontAccounting",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-hash": "*",
        "gmail-invoice-processor/gmail-invoice-processor": "^1.0",
        "pdf-ocr-processor/pdf-ocr-processor": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AmazonInvoices\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./packages/gmail-invoice-processor"
        },
        {
            "type": "path",
            "url": "./packages/pdf-ocr-processor"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "AmazonInvoices\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/coverage",
        "analyse": "phpstan analyse src tests --level=8",
        "cs-fix": "phpcbf src tests",
        "cs-check": "phpcs src tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
